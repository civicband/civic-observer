{% load static %}
<!DOCTYPE html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}CivicObserver{% endblock %}</title>
        <link href="{% static 'css/tailwind.css' %}" rel="stylesheet">
    </head>
    <body class="h-full bg-gray-100 font-sans">
        <div class="min-h-full">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
                <div class="bg-white rounded-lg shadow-sm">
                    <nav class="border-b border-gray-200 px-6 py-4">
                        <div class="flex space-x-6">
                            <a href="{% url 'munis:muni-list' %}" class="text-blue-600 hover:text-blue-800 hover:underline font-medium">Municipalities</a>
                            <a href="{% url 'admin:index' %}" class="text-blue-600 hover:text-blue-800 hover:underline font-medium">Admin</a>
                        </div>
                    </nav>

                    <main class="p-6">
                        {% block content %}
                        {% endblock content %}
                    </main>
                </div>
            </div>
        </div>
    </body>
</html>
